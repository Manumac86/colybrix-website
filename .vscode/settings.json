{
  "jest.autoRun": {
    "watch": false,
    "onStartup": ["all-tests"]
  },
  "jest.showCoverageOnLoad": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "testing.automaticallyOpenPeekView": "failureInVisibleDocument",
  "files.exclude": {
    "**/.git": true,
    "**/.next": true,
    "**/node_modules": true,
    "**/coverage": false
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/coverage": true,
    "**/.next": true
  }
}
